<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testbg"
    >

    <!-- Daftar Akun -->
    <TextView
        android:id="@+id/daftarakun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="DAFTAR AKUN"
        android:textColor="@color/yellow4"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Garis Kuning -->
    <View
        android:id="@+id/yellow_line"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:background="#FFD358"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/daftarakun"
        app:layout_constraintWidth_percent="0.9" />

    <TextView
        android:id="@+id/text_daftarkan_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"
        android:text="Daftarkan akun anda"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="@font/outfit_regular"
        app:layout_constraintTop_toBottomOf="@id/yellow_line"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/input_nim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Nomor Induk Mahasiswa"
        android:background="@drawable/inputnim_background"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:fontFamily="@font/outfit_regular"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/text_daftarkan_akun"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Email"
        android:background="@drawable/inputnim_background"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:fontFamily="@font/outfit_regular"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/input_nim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <EditText
        android:id="@+id/input_nomor_ponsel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Nomor Telepon"
        android:background="@drawable/inputnim_background"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:fontFamily="@font/outfit_regular"
        android:textSize="15dp"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/input_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <EditText
        android:id="@+id/input_buat_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Buat password"
        android:background="@drawable/inputnim_background"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:fontFamily="@font/outfit_regular"
        android:textSize="15dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/input_nomor_ponsel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <EditText
        android:id="@+id/input_konfirmasi_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Konfirmasi password"
        android:background="@drawable/inputnim_background"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:fontFamily="@font/outfit_regular"
        android:textSize="15dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/input_buat_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <RadioButton
        android:id="@+id/radio_setuju"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="40dp"
        android:buttonTint="@color/black"
        android:text="Data yang saya masukkan adalah benar, dan saya menyetujui. syarat dan ketentuan "
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/outfit_regular"
        app:layout_constraintTop_toBottomOf="@id/input_konfirmasi_password"
        app:layout_constraintStart_toStartOf="parent"
/>


    <Button
        android:id="@+id/btn_selanjutnya"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_background_blue"
        android:text="Daftar"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:fontFamily="@font/outfit_bold"
        app:layout_constraintTop_toBottomOf="@id/radio_setuju"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/text_sudah_memiliki_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sudah memiliki akun?"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/outfit_regular"
        app:layout_constraintTop_toBottomOf="@id/btn_selanjutnya"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
